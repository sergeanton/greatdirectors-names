{
  "name": "testframework",
  "version": "1.0.0",
  "description": "A test of all steps",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:mail": "babel --out-dir dist src --copy-files --ignore **/*.test.js ",
    "build:umd": "webpack --mode=development --output-filename index.umd.js",
    "build:umd.min": "webpack --mode=production --output-filename index.umd.min.js",
    "test": "nyc mocha",
    "watch:test": "mocha --watch",
    "lint": "eslint src",
    "validate": "npm-run-all --parallel test lint build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergeanton/testFramework.git"
  },
  "files": [
    "dist"
  ],
  "author": "Serge Anton <serge.anton@takoma.fr>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/sergeanton/testFramework/issues"
  },
  "homepage": "https://github.com/sergeanton/testFramework#readme",
  "dependencies": {
    "rimraf": "^3.0.2",
    "unique-random-array": "^2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.7.0",
    "eslint-config-kentcdodds": "^14.14.2",
    "ghooks": "^2.0.4",
    "mocha": "^8.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  }
}
